<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="rulesysinfo" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="rulesysinfo" scope="public">
    <example>Sarah sysinfo</example>
    <tag>out.action=new Object(); </tag>
    
    <item>SARAH</item>
    <one-of>
	  <item>Ta mémoire utilisé      <tag>out.action.key="MEM";</tag></item>
	  <item>Ton escpace libre  C 	<tag>out.action.key="FREEC";</tag></item>
	  <item>Escpace Disponible C 	<tag>out.action.key="FREEC";</tag></item>
	  <item>Total Disque  C      	<tag>out.action.key="DDC";</tag></item>
	  
	  <item>Ta charge CPU  	     	<tag>out.action.key="CPU";</tag></item>
	  <item>Ta température CPU      <tag>out.action.key="TCPU";</tag></item>
	  <item>Le nom de ton CPU       <tag>out.action.key="NOM";</tag></item>
	  
	  <item>Ton IP               	<tag>out.action.key="MONIP";</tag></item>
	  <item>Ton adresse IP       	<tag>out.action.key="MONIP";</tag></item>
	  <item>Nombre de service    	<tag>out.action.key="SRV";</tag></item>
	  
	  <item>Nombre de barette mémoire <tag>out.action.key="MENRAMT";</tag></item>
	  <item>Capacité de la barrette 1 <tag>out.action.key="MENRAM1";</tag></item>
	  <item>Capacité de la barrette 2 <tag>out.action.key="MENRAM2";</tag></item>
	  <item>Capacité de la barrette 3 <tag>out.action.key="MENRAM3";</tag></item>
	  <item>Capacité de la barrette 4 <tag>out.action.key="MENRAM4";</tag></item>
	  <item>Capacité de la barrette 5 <tag>out.action.key="MENRAM5";</tag></item>
	  <item>Capacité de la barrette 6 <tag>out.action.key="MENRAM6";</tag></item>
	  <item>Capacité de la barrette 7 <tag>out.action.key="MENRAM7";</tag></item>
	  <item>Capacité de la barrette 8 <tag>out.action.key="MENRAM8";</tag></item>
	</one-of>
    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/sysinfo";</tag>
  </rule> 
</grammar>
